@model User

@{
    ViewData["Title"] = "Student Profile";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Student Profile</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <h4>@Model.FirstName @Model.LastName</h4>
                            <p class="text-muted">@Model.Role</p>
                        </div>
                        <div class="col-md-8">
                            <h5 class="card-title">Personal Information</h5>
                            <hr />
                            <div class="row mb-2">
                                <div class="col-sm-4 font-weight-bold">First Name:</div>
                                <div class="col-sm-8">@Model.FirstName</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4 font-weight-bold">Last Name:</div>
                                <div class="col-sm-8">@Model.LastName</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4 font-weight-bold">Date of Birth:</div>
                                <div class="col-sm-8">@Model.DateOfBirth.ToShortDateString()</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4 font-weight-bold">Email:</div>
                                <div class="col-sm-8">@Model.Credential?.Email</div>
                            </div>

                            @if (Model.StudentDetails != null)
                            {
                                <h5 class="card-title mt-4">Academic Information</h5>
                                <hr />
                                <div class="row mb-2">
                                    <div class="col-sm-4 font-weight-bold">Course:</div>
                                    <div class="col-sm-8">@Model.StudentDetails.Course</div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-sm-4 font-weight-bold">Semester:</div>
                                    <div class="col-sm-8">@Model.StudentDetails.Semester</div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            @if (User.IsInRole("Admin")){
                                <a asp-action="EditProfile" class="btn btn-primary btn-block">
                                <i class="fas fa-edit"></i> Edit Profile
                            </a>
                            }
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>